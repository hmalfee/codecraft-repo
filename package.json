{
    "name": "codecraft-repo",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "predev": "docker compose up -d && pnpx cross-env SKIP_ENV_VALIDATION=1 drizzle-kit push",
        "preview": "pnpm predev && next build && next start",
        "dev": "next dev",
        "check": "next lint && tsc --noEmit && prettier \"**/*\" \"!**/*.{tf,hcl}\" \"!{migrations,public,pnpm-lock.yaml}\" --check --cache && terraform fmt -check -recursive ./infra && terraform -chdir=infra validate",
        "format": "prettier \"**/*\" \"!**/*.{tf,hcl}\" \"!{migrations,infra/.terraform,public,pnpm-lock.yaml}\" --write --cache && terraform fmt -recursive ./infra",
        "clean": "rm -rf .next node_modules",
        "db:studio": "pnpx cross-env SKIP_ENV_VALIDATION=1 DATABASE_URL=postgres://postgres:postgres@localhost:5432/codecraft-repo drizzle-kit studio",
        "db:reset": "pnpx cross-env SKIP_ENV_VALIDATION=1 DATABASE_URL=postgres://postgres:postgres@localhost:5432/codecraft-repo sh ./scripts/db-reset.sh",
        "add-component": "pnpx shadcn@latest add",
        "setup-git-hooks": "sh ./scripts/git-hooks/install.sh",
        "prepare": "terraform -chdir=infra init -backend=false"
    },
    "dependencies": {
        "@hookform/resolvers": "^5.0.1",
        "@radix-ui/react-checkbox": "^1.3.1",
        "@radix-ui/react-dropdown-menu": "^2.1.14",
        "@radix-ui/react-label": "^2.1.6",
        "@radix-ui/react-slot": "^1.2.2",
        "@t3-oss/env-core": "^0.13.4",
        "@tanstack/react-query": "^5.69.0",
        "@trpc/client": "^11.0.0",
        "@trpc/react-query": "^11.0.0",
        "@trpc/server": "^11.0.0",
        "better-auth": "^1.2.8",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "drizzle-orm": "^0.44.5",
        "lucide-react": "^0.510.0",
        "next": "^15.3.3",
        "next-themes": "^0.4.6",
        "pg": "^8.16.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hook-form": "^7.56.3",
        "sonner": "^2.0.3",
        "source-map-support": "0.5.21",
        "superjson": "^2.2.1",
        "tailwind-merge": "^3.3.0",
        "winston": "^3.17.0",
        "winston-transport": "^4.9.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@tailwindcss/postcss": "^4.0.15",
        "@types/node": "^20.14.10",
        "@types/pg": "^8.15.2",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@types/source-map-support": "^0.5.10",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.23.0",
        "eslint-config-next": "^15.2.3",
        "eslint-plugin-drizzle": "^0.2.3",
        "postcss": "^8.5.3",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-sh": "^0.17.4",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "server-only": "^0.0.1",
        "tailwindcss": "^4.0.15",
        "trpc-ui": "^1.0.15",
        "tw-animate-css": "^1.2.9",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.27.0"
    },
    "ct3aMetadata": {
        "initVersion": "7.39.3"
    },
    "packageManager": "pnpm@10.7.0",
    "engines": {
        "node": "22.x.x",
        "pnpm": "10.x.x"
    }
}
